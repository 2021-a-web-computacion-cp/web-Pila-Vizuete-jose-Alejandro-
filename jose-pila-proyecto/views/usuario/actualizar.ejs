<%- include('../comunes/cabecera') %>
<div class='container'>
    <h1> Actualizar cita </h1>
    <form action='/cita/actualizar-formulario/<%= cita.id_cita %>' method='post'>

        <div class='mb-3'>
            <label for='nombre' class='form-label'>
                Nombre*:
            </label>
            <input type='text'
                   name='nombre'
                   value='<%= cita.nombre %>'
                   class='form-control'
                   id='nombre'
                   aria-describedby='actNombre'>
            <div id='actNombre' class='form-text'>
                Actualice su nombre
            </div>
        </div>
        <br>
        <div class='mb-3'>
            <label for='apellido' class='form-label'>
                Apellido*:
            </label>
            <input type='text'
                   name='apellido'
                   value='<%= cita.apellido %>'
                   class='form-control'
                   id='apellido'
                   aria-describedby='actApellido'>
            <div id='actApellido' class='form-text'>
                Actualice su apellido
            </div>
        </div>
        <div class='mb-3'>
            <label for='cedula' class='form-label'>
                Cedula*:
            </label>
            <input placeholder='Ej. 1723884912'
                   type='text'
                   name='cedula'
                   value='<%= cita.cedula%>'
                   class='form-control'
                   id='cedula'
                   aria-describedby='cedulaNombre'>
        </div>
        <br>
        <div class='mb-3'>
            <label for='categoria' class='form-label'>
                Categoría
            </label>
            <select id='categoria'
                    type='text'
                    name='categoria'
                    class='form-control'
                    value='<%= cita.categoria %>'
                    aria-describedby='areaCat'>
                <option value='Oftalmologia'>Oftalmologia</option>
                <option value='MedicinaGeneral'>Medicina General</option>
                <option value='Odontología'>Odontología</option>
                <option value='Pediatría'>Pediatria</option>
            </select>
        </div>
        <br>
        <div class='mb-3'>
            <label for='seguroSocial'>
                Afiliado al seguro Social
            </label>
            <input type='checkbox' id='seguro_social' name='seguro_social' checked> Si
            <input type='checkbox' id='seguro_social' name='seguro_social'>No
        </div>
        <br>
        <button type="submit" class="btn btn-primary w-100">Actualizar</button>
    </form>

</div>

<%- include('../comunes/footer') %>
